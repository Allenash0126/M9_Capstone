<div id="header" class="d-flex justify-content-between">
  <h3 class=" align-items-center  ">User List</h3>
  <a href="/admin/timelists">
    <button class="btn btn-info text-white" type="submit">Time List</button>
  </a>
</div>

<div class="d-flex align-items-center pt-3 pb-5 my-3 text-white-50 bg-purple">
  <table class="table align-middle">
    <thead class="thead-dark">
      <tr>
        <th scope="col">id</th>
        <th scope="col">名字</th>
        <th scope="col">是否為老師</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <th scope="row">{{ this.id }}</th>
        <td>{{ this.name }}</td>
        <td>{{ this.isTeacher }}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>