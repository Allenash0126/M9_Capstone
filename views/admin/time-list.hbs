<div class="d-flex align-items-center pt-3 pb-5 my-3 text-white-50 bg-purple">
  {{#if list}}
  <form action="/admin/timelists/{{ list.id }}?_method=PUT" method="post" class="row">
    <div class="col-auto">
      <input class="form-control" type="text" name="timeList" id="timeList" value="{{ list.timeList }}">
    </div>
    <div class="col-auto">
      <button class="btn btn-warning" type="submit">Update</button>
      <a href="/admin/timelists">or Create new</a>
    </div>
  </form>
  {{else}}
  <form action="/admin/timelists" method="post" class="row">
    <div class="col-auto">
      <input class="form-control" type="text" name="timeList" id="timeList" placeholder="Class Duration">
    </div>
    <div class="col-auto">
      <button class="btn btn-success" type="submit">Creat</button>
    </div>
  </form>
  {{/if}}
</div>

<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Time List</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each lists}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.timeList}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/timelists/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/timelists/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除{{this.timeList}}嗎？`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
