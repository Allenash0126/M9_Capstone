<div id="container" class="d-flex">
  <div id="left" class="col-4">
    <div id="studentImage">
      <img class="img-fluid" src="{{user.image}}" alt="card image" width="286px" height="180px"
        style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
    </div>
    <div id="intro">
      <h3>{{ user.name }}</h3>
      <p>Nation: {{ user.nation }}</p>
      <p>About me: {{ user.intro }}</p>
    </div>
  </div>

  <div id="right" class="col-8">
    <div id="new schedule">
      <h5>New Schedule</h5>
      <div>
        <p>Time: {{ record.time }} </p>
        <p>Teacher's Name: {{ record.name }} </p>
        <p>Session Link: {{ record.class.link }} </p>
      </div>
    </div>

    <div id="History">
      <h5>Lesson History</h5>
      <div id="teacherImage">
        <img class="img-fluid" src="{{ record.class.image }}" alt="card image" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
      </div>
      <div>
        <p>{{ record.teacherId.name }}</p>
      </div>
      <div>
        <a href="/classes/{{ user.id }}/comment"><button>Score</button></a>
      </div>
    </div>

    <div id="comment">
      <h5>Recent Review</h5>
      <div>
        {{ record.score }}
        {{ record.comment }}
      </div>
    </div>
    <form action="/users/profile/{{ user.id }}/edit" method="get">
      <button class="btn btn-info text-white">Edit</button>
    </form>
  </div>

</div>