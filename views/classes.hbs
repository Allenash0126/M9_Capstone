<div id="container">
  <div class="row mt-3">
    {{#each classes}}
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <a href="/classes/{{ this.id }}">
          <img class="card-img-top img-fluid" src="{{ this.image }}" alt="image" width="286px" height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
        </a>
      <div class="card-body">
        <p class="card-text">
          <a href="/classes/{{ this.id }}"></a>
            {{ this.teacherName }}
        </p>
        <p class="card-text">{{ this.nation }}</p>
        <p class="card-text">{{ this.score }}</p>
        <p class="card-text">{{ this.intro }}</p>

      </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>