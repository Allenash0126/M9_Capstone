<div id="container" class="d-flex"> 
  <div id="left" class="col-4">
    <div id="image">
      <img class="img-fluid" src="{{user.image}}" alt="card image" width="286px" height="180px"
        style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
    </div>
    <div id="teacher intro">
      <h3>{{ user.name }}</h3>
      <p>Nation: {{ class.nation }}</p>
      <p>Score: {{ user.scoreAvg }}</p> {{!-- scoreAvg 從class.model 來  --}}
      <p>About me: {{ class.intro }}</p>
    </div>
  </div>

  <div id="right" class="col-8">
    <div id="new schedule">
      <h5>New Schedule</h5>
      <div>
        <p>Time: {{ record.time }} </p>
        <p>Student's name: {{ record.name }} </p>
        <p>Session Link: {{ class.link }} </p>
      </div>
    </div>

    <div id="style">
      <h5>Your Teaching Style</h5>
      <p>{{ class.style }}</p>
    </div>

    <div id="comment">
      <h5>Recent Review</h5>
      <div>
        {{ record.score }}
        {{ record.comment }}
      </div>
    </div>
    <form action="/teacher/profile/{{ user.id }}/edit" method="get">
      <button class="btn btn-info text-white">Edit Profile & Booking Calendar</button>
    </form>
  </div>

</div>
