<div id="container" class="d-flex"> 
  <div id="left" class="col-4">
    <div id="image">
      <img class="image-resposive center-block" src="{{ class.image }}" alt="card image"
        style="width:250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
    </div>
    <div id="teacher intro">
      <h3>{{ user.name }}</h3>
      <p>Nation: {{ class.nation }} </p>
      <p>Score: {{ scoreAvg }}</p> 
      <p>About me: {{ class.intro }}</p>
    </div>
  </div>

  <div id="right" class="col-8">
    <div id="new schedule">
      <h5>New Schedule</h5>
      <div>
        {{#each records}}
          <div id="card" class="card mb-4 shadow-sm">
            <p>Time: {{ this.date }} {{ this.oclock }} </p>
            <p>Student's name: {{ this.User.name }} </p>
            <p>Session Link: {{ this.Class.link }} </p>
          </div>
        {{/each}}
      </div>
    </div>

    <div id="style">
      <h5>Your Teaching Style</h5>
      <p class="card mb-4 shadow-sm">{{ class.style }}</p>
    </div>

    <div id="comment">
      <h5>Recent Review</h5>
      {{#each records2}}
        <div id="card" class="card mb-4 shadow-sm">
          <p>Time: {{ this.date }} {{ this.oclock }} </p>
          <p>Student's name: {{ this.User.name }} </p>
          <p>Score: {{ this.score }}</p>
          <p>Comment: {{ this.comment }}</p>
        </div>
      {{/each}}
    </div>
    <form action="/teacher/profile/{{ user.id }}/edit" method="get">
      <button class="btn btn-info text-white">Edit Profile & Booking Calendar</button>
    </form>
  </div>

</div>
