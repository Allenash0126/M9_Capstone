<div id="container" class="d-flex">
  <div id="left" class="col-8">
    <div id="left_up">
      <div id="image">
        <img class="image-resposive center-block" src="{{ class.image }}" alt="card image"
          style="width:250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1">
      </div>

      <div id="not_image">
        <h3>{{ class.teacherName }}</h3>
        <p>Nation: {{ class.nation }} </p>
        <p>Score: {{ user.scoreAvg }}</p> {{!-- scoreAvg 從class.model 來 --}}
      </div>
    </div>

    <div id="left_bottom">
      <h6>Introduction</h6>
      <p>{{ class.intro }}</p>
      
      <h6>Teaching Style</h6>
      <p>{{ class.style }}</p>

      <h6>Lesson History</h6>
      {{#each records}}
        {{ this.score }}
        <p>{{ this.comment }}</p>
      {{/each}}
    </div>
  </div>

  <div id="right" class="col-4">
    <h3>預約上課</h3>
    <p>Time</p>
    <form action="/records/" method="post">

    <!-- Button 觸發 Modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Submit
    </button>
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">確定預約？</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Time</p>
            <p>Name</p>
            <p>Link</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">儲存變更</button>
          </div>
        </div>
      </div>
    </div>
    </form>
  </div>

</div>
